{
  "name": "banglascript",
  "version": "1.9.0",
  "description": "Write JavaScript in Bangla with BanglaScript - a transpiler supporting variables, functions, classes, async, and CLI with build, run, watch, and init commands",
  "main": "lib/transpile-ast.js",
  "bin": {
    "bjs": "bin/bjs.js"
  },
  "scripts": {
    "test": "node test/test.js",
    "build": "bjs build src/*.bjs -o build",
    "watch": "bjs watch src/*.bjs -o build",
    "run": "bjs run src/main.bjs"
  },
  "keywords": [
    "bangla",
    "bengali",
    "banglascript",
    "transpiler",
    "bengali-programming",
    "javascript",
    "cli",
    "বাংলা"
  ],
  "author": "Mahmud Rahman",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.23.0",
    "@babel/generator": "^7.23.0",
    "@babel/parser": "^7.23.0",
    "@babel/preset-env": "^7.23.2",
    "babel-preset-minify": "^0.5.2",
    "commander": "^11.0.0",
    "chokidar": "^3.5.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BengalEmpire/BanglaScript.git"
  },
  "homepage": "https://bangla-script.vercel.app"
}