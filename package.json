{
  "name": "banglascript",
  "version": "2.2.0",
  "description": "BanglaScript: Write JavaScript in Bangla. Transpile Bangla code to JavaScript with support for variables, functions, classes, async, CLI, and more.",
  "main": "lib/transpile-ast.js",
  "files": [
    "bin/",
    "lib/",
    "README.md"
  ],
  "bin": {
    "bjs": "bin/bjs.js"
  },
  "scripts": {
    "test": "node test/test.js",
    "build": "bjs build src/*.bjs -o build",
    "watch": "bjs watch src/*.bjs -o build",
    "run": "bjs run src/main.bjs"
  },
  "keywords": [
    "bangla",
    "bengali",
    "banglascript",
    "transpiler",
    "bengali-programming",
    "javascript",
    "cli",
    "বাংলা"
  ],
  "author": "Mahmud Rahman",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.23.0",
    "@babel/generator": "^7.23.0",
    "@babel/parser": "^7.23.0",
    "@babel/preset-env": "^7.23.2",
    "babel-preset-minify": "^0.5.2",
    "chokidar": "^3.5.3",
    "commander": "^11.0.0",
    "glob": "^11.0.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BengalEmpire/BanglaScript.git"
  },
  "homepage": "https://bangla-script.vercel.app",
  "publishConfig": {
    "access": "public"
  }
}